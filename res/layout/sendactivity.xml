<?xml version="1.0" encoding="UTF-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1" >
        <TableRow>
        <TextView 
            android:layout_height="wrap_content"
            android:text="收信地址:"/>
        <EditText 
            android:id="@+id/determine"
            android:layout_span="2"
            android:layout_height="wrap_content" />"
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/hint"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center"
            android:text="以下为短信正文"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/zhengwen" 
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:minLines="9"
            android:maxLines="9"
            android:gravity="top"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/send"
            android:layout_height="wrap_content"
            android:text="发送短信"/>
        <Button
            android:id="@+id/log"
            android:layout_height="wrap_content"
            android:text="存为草稿"/>
        <Button
            android:id="@+id/refresh"
            android:layout_height="wrap_content"
            android:text="重新编辑"/>
    </TableRow>    
</TableLayout>
